{% if messages %}
    {% for message in messages %}
        {% if message.tags == "bw-success" %}
            <div class="hs-removing:translate-x-5 hs-removing:opacity-0 transition duration-300 bg-teal-50 border border-teal-200 rounded-md p-4"
                 role="alert">
                <div class="flex">
                    <div class="flex-shrink-0 hs-tooltip">
                        <svg class="h-4 w-4 text-teal-400 mt-0.5 font-bold hs-tooltip-toggle transition"
                             xmlns="http://www.w3.org/2000/svg"
                             width="16"
                             height="16"
                             fill="currentColor"
                             viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                        </svg>
                        <span class="hs-tooltip-content hs-tooltip-shown:opacity-100 hs-tooltip-shown:visible opacity-0 transition-opacity inline-block absolute invisible z-10 py-1 px-2 bg-green-400 text-xs font-semibold text-white rounded-md shadow-sm"
                              role="tooltip">{{ "success"|title }}</span>
                    </div>
                    <div class="ml-3">
                        <div class="text-sm text-teal-800 font-medium">{{ message }}</div>
                    </div>
                </div>
            </div>
        {% elif message.tags == "bw-error" %}
            <div class="hs-removing:translate-x-5 hs-removing:opacity-0 transition duration-300 bg-red-50 border border-red-200 rounded-md p-4 my-1"
                 role="alert">
                <div class="flex">
                    <div class="flex-shrink-0 hs-tooltip">
                        <svg class="h-4 w-4 text-red-400 mt-0.5 hs-tooltip-toggle transition"
                             xmlns="http://www.w3.org/2000/svg"
                             width="16"
                             height="16"
                             fill="currentColor"
                             viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z" />
                        </svg>
                        <span class="hs-tooltip-content hs-tooltip-shown:opacity-100 hs-tooltip-shown:visible opacity-0 transition-opacity inline-block absolute invisible z-10 py-1 px-2 bg-red-400 text-xs font-semibold text-white rounded-md shadow-sm"
                              role="tooltip">{{ "error"|title }}</span>
                    </div>
                    <div class="ml-3">
                        <div class="text-sm text-red-800 font-semibold">{{ message }}</div>
                    </div>
                </div>
            </div>
        {% elif message.tags == "bw-info" %}
            <div class="hs-removing:translate-x-5 hs-removing:opacity-0 transition duration-300 bg-blue-50 border border-blue-200 text-blue-600 rounded-md p-4 my-1"
                 role="alert">
                <div class="flex">
                    <div class="flex-shrink-0 hs-tooltip">
                        <svg class="h-4 w-4 text-blue-700 mt-0.5 hs-tooltip-toggle transition"
                             xmlns="http://www.w3.org/2000/svg"
                             width="16"
                             height="16"
                             fill="currentColor"
                             viewBox="0 0 16 16">
                            <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
                        </svg>
                        <span class="hs-tooltip-content hs-tooltip-shown:opacity-100 hs-tooltip-shown:visible opacity-0 transition-opacity inline-block absolute invisible z-10 py-1 px-2 bg-blue-700 text-xs font-semibold text-white rounded-md shadow-sm"
                              role="tooltip">{{ "info"|title }}</span>
                    </div>
                    <div class="ml-3">
                        <div class="text-sm text-blue-600 font-medium">{{ message }}</div>
                    </div>
                </div>
            </div>
        {% elif message.tags == "bw-warning" %}
            <div class="hs-removing:translate-x-5 hs-removing:opacity-0 transition duration-300 bg-orange-50 border border-orange-200 rounded-md p-4 my-1"
                 role="alert">
                <div class="flex">
                    <div class="flex-shrink-0 hs-tooltip">
                        <i class="fa-solid fa-circle-exclamation text-orange-600 hs-tooltip-toggle transition mt-0.5 h-4 w-4"></i>
                        <span class="hs-tooltip-content hs-tooltip-shown:opacity-100 hs-tooltip-shown:visible opacity-0 transition-opacity inline-block absolute invisible z-20 py-1 px-2 bg-orange-600 text-xs font-semibold text-white rounded-md shadow-sm"
                              role="tooltip">{{ "warning"|title }}</span>
                    </div>
                    <div class="ml-3 mt-0.5">
                        <div class="text-sm text-orange-600 font-semibold">{{ message }}</div>
                    </div>
                </div>
            </div>
        {% elif message.tags == "bw-debug" %}
            <div class="bg-yellow-50 my-1 border border-yellow-200 rounded-md p-4"
                 role="alert">
                <div class="flex">
                    <div class="flex-shrink-0 hs-tooltip">
                        <svg class="h-4 w-4 text-yellow-400 mt-0.5 hs-tooltip-toggle transition"
                             xmlns="http://www.w3.org/2000/svg"
                             width="16"
                             height="16"
                             fill="currentColor"
                             viewBox="0 0 16 16">
                            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                        </svg>
                        <span class="hs-tooltip-content hs-tooltip-shown:opacity-100 hs-tooltip-shown:visible opacity-0 transition-opacity inline-block absolute invisible z-10 py-1 px-2 bg-yellow-500 text-xs font-semibold text-white rounded-md shadow-sm"
                              role="tooltip">{{ "DEBUGGING"|title }}</span>
                    </div>
                    <div class="ml-4">
                        <h3 class="text-sm text-yellow-800 font-semibold">DEBUGGING</h3>
                        <div class="mt-1 text-sm text-yellow-700">{{ message }}</div>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endfor %}
{% endif %}

